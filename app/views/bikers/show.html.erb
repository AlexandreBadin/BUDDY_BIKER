
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/danpaqzgt/image/upload/v1621346378/bikers/images_6_cguxav.jpg);">
  <div class="container">
    <h1><%= @biker.pseudo %></h1>
  </div>
</div>

<div class="container">
  <div class="card-biker">
    <div class="card-description">
      <div class="description">
        <h2> <i class="fas fa-bomb"></i>  Biker Power </i> </h2>
        <p> <%= @biker.description %> </p>
        <p> <i class="far fa-calendar-alt"></i> Available: <%= @biker.date %> </p>
        <div class="price">
        <p> Price: <%= @biker.price %>â‚¬ </p>
        </div>
      </div>
    </div>

    <img id="map" src='https://api.mapbox.com/styles/v1/mapbox/streets-v11/static/2.3381,48.8693,10.45,0,0/600x1000?access_token=pk.eyJ1IjoiYWxleGJhZCIsImEiOiJja280OTRtdXgwenAzMnZzNXRyN2w1OHhqIn0.15FTycYgx6V6LbJJM6j9yA'>

  </div>

  <div class="form-booking">
    <%= simple_form_for ([@biker, @booking]) do |f| %>
      <p><%= f.input :date, label: 'Prestation date' %></p>
      <p><%= f.submit "Book", class: "btn btn-primary" %></p>
    <% end %>
  </div>

  <div class="form-review">
    <%= simple_form_for([ @biker, @review ]) do |f| %>
    <%= f.input :content, as: :text, label: 'Add a review',placeholder: 'Tell us how you Biker did...' %>
    <%= f.input :rating, as: :select, collection: (1..5), required: true, prompt: "What's your rating", input_html: { id: 'review_rating' } %>
    <%= f.submit class:'btn btn-primary' %>
    <% end %>
  </div>
</div>
