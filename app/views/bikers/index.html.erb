      <div class="notification-content">
        <p><small><%= biker.pseudo %></small></p>
        <p><%= biker.address %>, <strong><%= biker.price %>â‚¬/day</strong></p>
      </div>

      <div class="notification-actions">
        <%= link_to 'Reserver', biker_path(biker), class: "btn btn-success" %>
        <%= link_to 'See more', biker_path(biker), class: "btn btn-info" %>
      </div>
    </div>
  <% end %>
</div>
